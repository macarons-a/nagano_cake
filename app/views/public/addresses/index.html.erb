<div class="container">
  <div class="row">
    <h3>配送先登録/一覧</h3>
  </div>
  <div class="row">
    <%= form_with model: @address do |f| %>
      <div class="form-group">
        <table class="table">
          <tbody>
            <tr>
              <td><%= f.label :postal_code,"郵便番号" %></td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :address,"住所" %></td>
              <td colspan="4"><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :name,"宛先" %></td>
              <td><%= f.text_field :name, class: "form-control" %></td>
              <td><td>
              <td><%= f.submit "新規登録",class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address.id),class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
         <% end %>
      </tbody>
    </table>
  </div>
</div>