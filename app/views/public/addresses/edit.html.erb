<div class="container">
  <div class="row mx-auto">
    <h3 class="bg-light mt-4">配送先編集</h3>
  </div>
  <div class="row mx-auto">
    <%= form_with model: @address do |f| %>
      <div class="form-group table-responsive">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :address,"住所" %></td>
              <td colspan="4"><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :name,"宛先" %></td>
              <td><%= f.text_field :name, class: "form-control" %></td>
              <td><%= f.submit "変更内容を保存",class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>