<div class="container">
  <div class="row">
    <h2>新規会員登録</h2>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form-group">
        <table>
          <tbody>
            <tr>
              <td><%= f.label :first_name, "名前" %></td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "form-control" %></td>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :first_name_kana, "フリガナ" %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name", class: "form-control" %></td>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号" %></td>
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address, autofocus: true, autocomplete: "street-address", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :phone_number, "電話番号" %></td>
              <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "tel", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード(6文字以上)" %></td>
              <%# if @minimum_password_length %>
                <!--<td><em>(<%#= @minimum_password_length %>文字以上)</em></td>-->
              <%# end %>
              <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "パスワード確認" %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規会員登録", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>

  <div>既に登録済みの方</div>
  <div><%= link_to "こちら",new_customer_session_path %>からログインしてください</div>


</div>