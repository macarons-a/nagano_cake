<div class="container">
  <div class=="row">
    <h4 class="d-inline-block mt-4">新規会員登録</h4>
  </div>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form-group">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :first_name, "名前" %></td>
              <td>(姓)</td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", class: "form-control", placeholder: "田中" %></td>
              <td>(名)</td>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", class: "form-control", placeholder: "太郎" %></td>
            </tr>
            <tr>
              <td><%= f.label :first_name_kana, "フリガナ" %></td>
              <td>(セイ)</td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "given-name", class: "form-control", placeholder: "タナカ" %></td>
              <td>(メイ)</td>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "family-name", class: "form-control", placeholder: "タロウ" %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td></td>
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code", class: "form-control", placeholder: "0000000" %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td></td>
              <td colspan="3"><%= f.text_field :address, autofocus: true, autocomplete: "street-address", class: "form-control", placeholder: "東京都千代田区丸の内0-0" %></td>
            </tr>
            <tr>
              <td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
              <td></td>
              <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "tel", class: "form-control", placeholder: "00000000000" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード(6文字以上)" %></td>
              <td></td>
              <%# if @minimum_password_length %>
                <!--<td><em>(<%#= @minimum_password_length %>文字以上)</em></td>-->
              <%# end %>
              <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td><%= f.submit "新規登録", class: "btn btn-success btn-block" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <div class=="row">
    <h4 class="d-inline-block mt-4">既に登録済みの方</h4>
    <p><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
  </div>
</div>