<div class="container">
  <div class="row">
    <h2 class="bg-light">マイページ</h2>
  </div>
  <div class="row">
    <h5><strong>登録情報</strong></h5>
    <p><%= link_to "編集する", edit_customer_path, class: "btn btn-success ml-5" %></p>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= "#{@customer.first_name} #{@customer.last_name}" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
    </table>
  </div>
  <div class="row">
    <table>
      <tbldy>
        <tr>
          <td>配送先</td>
          <td><%= link_to "一覧を見る",addresses_path,class: "btn btn-primary ml-3" %></td>
        </tr>
        <tr>
          <td>注文履歴</td>
          <td><%= link_to "一覧を見る",orders_path,class: "btn btn-primary ml-3" %></td>
        </tr>
      </tbldy>
    </table>
  </div>
</div>