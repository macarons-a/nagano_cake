<div class="container tr-color">
  <div class="row mt-5 mb-3">
    <h2>マイページ</h2>
  </div>
  <div class="row">
    <h3><strong>登録情報</strong></h3>
    <p><%= link_to "編集する", edit_customer_path, class: "btn btn-success ml-5" %></p>
  </div>
  <div class="row table-responsive mx-auto">
    <table class="table table-bordered bg-light">
      <tbody>
        <tr>
          <td class="col-2 bg-light">氏名</td>
          <td class=""><%= "#{@customer.first_name} #{@customer.last_name}" %></td>
        </tr>
        <tr>
          <td class="bg-light">フリガナ</td>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>
        <tr>
          <td class="bg-light">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="bg-light">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="bg-light">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td class="bg-light">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
    </table>
  </div>
  <div class="row mx-auto">
    <table class="table-responsive">
      <tbldy>
        <tr>
          <td><h5><strong>配送先</strong></h5></td>
          <td><%= link_to "一覧を見る",addresses_path,class: "btn btn-primary ml-5" %></td>
        </tr>
        <tr>
          <td class="pt-4"><h5><strong>注文履歴</strong></h5></td>
          <td class="pt-4"><%= link_to "一覧を見る",orders_path,class: "btn btn-primary ml-5" %></td>
        </tr>
      </tbldy>
    </table>
  </div>
</div>