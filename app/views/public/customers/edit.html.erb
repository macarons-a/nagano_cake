<div class="container">
  <div class="row mt-5 mb-3">
    <h3 class="bg-light">会員情報編集</h3>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: update_customer_path, method: :patch do |f| %>
      <div class="form-group table-responsive">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :first_name, class: "form-control" %></td>
              <td><%= f.text_field :last_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
              <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td colspan="3"><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :phone_number, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class: "btn btn-success btn-block" %></td>
              <td><%= link_to "退会する", customers_withdraw_confirm_path, class: "btn btn-danger ml-5" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>