<div class="container">
  <div class="row pt-5">
    <div class="col-2"></div>
    <div class="col-10">
      <h4>
        商品一覧
        <span><%= "(全#{Item.all.count}件)" %></span>
      </h4>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-3">
            <p>
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_image, size: "120x80" %>
              <% end %>
            </p>
            <div><%= item.name %></div>
            <div><%= "￥#{item.with_tax_price.to_s(:delimited)}" %></div>
          </div>
        <% end %>
      </div>
        <%= paginate @items %>
    </div>
  </div>
</div>