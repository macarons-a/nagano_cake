<div class="container">
  <div class="row pt-5">
    <div class="col-3"></div>
    <div class="col-9">
      <div class="row">
        <div class="col-4">
          <%= image_tag @item.get_image, size: "120x80" %>
        </div>
        <div class="col-5">
          <h4><%= @item.name %></h4>
          <p><%= @item.introduction %></p>
          <div>
            <%= "￥#{@item.with_tax_price}" %>
            <span>(税込)</span>
          </div>
          <div class="form">
            <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
              <div class="form-group">
                <%= f.hidden_field :item_id, :value => @item.id %>
              </div>
              <div class="form-group">
                <%= f.select :amount, *[1..10], include_blank: "個数選択" %>
              </div>
              <div class="form-group">
                <%= f.submit "カートに入れる", class: "btn btn-success btn-sm" %>
              </div>
            <% end %>
          </div>
       </div>
      </div>
    </div>
  </div>
</div>