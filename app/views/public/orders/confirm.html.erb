<div class="container">
  <div class="row mt-5">
    <h3 class="col-md-4 text-center">注文情報確認</h3>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= @form_data %>
      <table class="table table-bordered table-responsive bg-light">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% total = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_image, size: "50x50" %>
                <%= cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.price*1.1).floor.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= subtotal = ((cart_item.item.price*cart_item.amount)*1.1).floor.to_s(:delimited) %></td>
          </tr>
          <% total += ((cart_item.item.price*cart_item.amount)*1.1).to_i %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="mx-auto">
      <table class="table table-bordered table-responsive bg-light">
        <tbody>
          <tr>
            <td class="bg-light">送料</td>
            <% @order.shipping_cost = 800 %>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td class="bg-light">請求額</td>
            <td>
              <% @order.total_payment = @order.shipping_cost + total %>
              <%= @order.total_payment.to_s(:delimited) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 text-center">
      <h5><strong>支払方法</strong></h5>
      <p><%= @order.payment_method_i18n %></p>
    <div>
    <div>
      <h5><strong>お届け先</strong></h5>
      <p>
        〒<%= @order.postal_code %>
        <%= @order.address %><br>
        <%= @order.name %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :total_payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :status %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
    </div>
  </div>
</div>