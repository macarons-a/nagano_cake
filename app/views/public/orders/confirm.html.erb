<div class="container">
  <div class="row">
    <h2>注文情報確認</h2>
  </div>
  <div class="row">
    <div class="col-7">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% total = 0 %>
          <% @cart_items.each |cart_item| do %>
          <tr>
            <td><%= image_tag cart_item.item.get_image, size: "50x50" %>
                <%= cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.price*1.1).to_i %></td>
            <td><%= cart_item.amount %></td>
            <td><% subtotal = ((cart_item.item.price*cart_item.amount)*1.1).to_i %>
                <%= subtotal %>
            </td>
          </tr>
          <% total += (@cart_item.item.price*@cart_item.amount)*1.1 %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= total.to_i %></td>
          </tr>
          <tr>
            <td>請求額</td>
            <td><%= @order.total_payment.to_i %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <h5>支払方法</h5>
    <p><%= @order.payment_method %></p>
    <h5>お届け先</h5>
    <p>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.name %>
    </p>
  </div>

  <div class="row">
    <%= form_with model: @order, url: orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id %>
      <%= f.hidden_field :shipping_cost %>
      <%= f.hidden_field :total_payment %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :status %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
  </div>
</div>