<div class="container">
  <div class="row">
    <h2>注文情報入力</h2>
  </div>
  <div class="row">
    <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
      <h5>支払方法</h5>
      <div>
         <%= f.radio_button :payment_method, :credit_card, checked: true %>
         <%= f.label :credit_card, "クレジットカード" %>
      </div>
      <div>
         <%= f.radio_button :payment_method, :transfer, checked: true %>
         <%= f.label :transfer, "銀行振込" %>
      </div>
      <h5>お届け先</h5>
      <div>
        <%= f.radio_button :delivery_type, :my_address, checked: true %></td>
        <%= label_tag :my_address, "ご自身の住所" %><br>
        〒<%= @customer.postal_code %>
          <%= @customer.address %><br>
          <%= @customer.first_name %><%= @customer.last_name %>
      </div>
      <div>
        <%= f.radio_button :delivery_type, :existing_address %>
        <%= label_tag :existing_address, "登録済住所から選択" %><br>
        <%= f.collection_select :address_id, @addresses, :id, lambda { |address| "〒#{address.postal_code} #{address.address} #{address.name}" } %>
      </div>
      <div>
        <%= f.radio_button :delivery_type, :new_address %>
        <%= label_tag :new_address, "新しいお届け先" %>
        <div class="form-group">
          <table class="table">
            <tbody>
              <tr>
                <td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
                <td><%= f.text_field :postal_code, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :address,"住所" %></td>
                <td colspan="4"><%= f.text_field :address, class: "form-control" %></td>
              </tr>
              <tr>
                <td><%= f.label :name,"宛先" %></td>
                <td><%= f.text_field :name, class: "form-control" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <%= link_to "確認画面へ進む",orders_confirm_path,class: "btn btn-primary" %>
    <% end %>
  </div>
</div>