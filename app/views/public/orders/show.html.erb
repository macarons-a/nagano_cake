<div class="container">
  <div class="row">
    <h2>注文履歴詳細</h2>
  </div>
  <div class="row">
    <div class="col-7">
      <h5>注文情報</h5>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <h5>請求情報</h5>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= subtotal = ((@order.order_items.sum { |item| item.item.price * item.amount }) * 1.1).floor.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.shipping_cost.to_s(:delimited) %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td><%= @order.total_payment.to_s(:delimited)%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <h5>注文内容</h5>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= (cart_item.item.price*1.1).to_i %></td>
            <td><%= cart_item.amount %></td>
            <td><% subtotal = ((cart_item.item.price * cart_item.amount) * 1.1).floor.to_s(:delimited) %>
                <%= subtotal %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>