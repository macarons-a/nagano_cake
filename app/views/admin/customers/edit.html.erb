<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-sm-12 col-md-6 d-flex justify-content-center justify-content-md-start">
      <h3 class="bg-light"><%= "#{@customer.first_name}#{@customer.last_name}さんの会員情報編集" %></h3>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <div class="form-group">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :first_name, class: "form-control" %></td>
              <td><%= f.text_field :last_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
              <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, class: "form-control" %></td>
            </tr>
            <tr>
              <td >住所</td>
              <td colspan="3"><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :phone_number, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, false, id: "is_deleted_false" %>
                <%= f.label :is_deleted_false, "有効" %>
                <%= f.radio_button :is_deleted, true, id: "is_deleted_true" %>
                <%= f.label :is_deleted_true, "退会" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>