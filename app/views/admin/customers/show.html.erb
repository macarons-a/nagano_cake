<div class="container">
  <div class="row mt-5 mb-3">
    <h3 class="bg-light"><%= "#{@customer.first_name}#{@customer.last_name}さんの会員詳細" %></h3>
  </div>
  <div class="row">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td class="col-2">会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td class="col-2">氏名</td>
          <td><%= "#{@customer.first_name}　#{@customer.last_name}" %></td>
        </tr>
        <tr>
          <td class="col-2">フリガナ</td>
          <td><%= "#{@customer.first_name_kana}　#{@customer.last_name_kana}" %></td>
        </tr>
        <tr>
          <td class="col-2">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="col-2">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="col-2">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td class="col-2">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td class="col-2">会員ステータス</td>
          <% if @customer.is_deleted == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% end %>
        </tr>
        <tr>
          <td class="col-2"></td>
          <td>
            <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
            <%= link_to "注文履歴一覧見る", admin_path, class: "btn btn-primary ml-3" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>