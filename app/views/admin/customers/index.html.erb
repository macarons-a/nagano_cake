<div class="container">
  <div class="row">
    <h2>会員一覧</h2>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= "#{customer.first_name}#{customer.last_name}" %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <% if customer.is_deleted == false %>
              <td>有効</td>
            <% else %>
              <td>無効</td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>