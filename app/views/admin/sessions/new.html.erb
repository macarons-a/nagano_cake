<div class="container">
  <div class="pt-4">
    <h4 class="bg-muted d-inline-block">管理者ログイン</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td class="text-center"><%= f.label :email,"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </tr>
          <tr>
            <td class="text-center"><%= f.label :password,"パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", class: "form-control" %></td>
          </tr>
        </tbody>
    </table>
    <div class="actions d-flex justify-content-center">
      <%= f.submit "ログイン",class: "btn btn-primary mt-5" %>
    </div>
    <% end %>
  </div>
</div>







