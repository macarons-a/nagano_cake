<div class="container">
  <div class="col-2 title text-center pt-5 pb-2">
    <h5 class="bg-light">注文履歴一覧</h5>
  </div>
  
  <table class="table border-bottom">
    <thead>
      <tr>
        <th class="col-3">購入日時</th>
        <th class="col-3">購入者</th>
        <th class="col-3">注文個数</th>
        <th class="col-3">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
          <td><%= order.customer.name %></td>
          <td>
            <% total_amount = 0 %>
            <% order.order_items.each do |order_item| %>
              <% total_amount += order_item.amount %>
            <% end %>
            <%= total_amount %>
          </td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row mt-2">
    <span class="mx-auto"><%= paginate @orders %></span>
  </div>
</div>