<div class="order-group container">
  <div class="col-2 title text-center pt-4">
    <h5 class="bg-light">注文履歴詳細</h5>
  </div>
  
  
  <div>
    購入者<%= link_to @order.customer.name, customers_path %>
  </div>
  <div>
    注文日<%= @order.created_at %>
  </div>
  <div>
    配送先<%= @order.address %><br><%= @order.name %>
  </div>
  <div>
    支払方法<%= @order.payment_method %>
  </div>
  <div>
    注文ステータス
    <%= form_with model: @order, method: :patch do |f| %>
      <%= f.select :status, options_for_select(Order.statuses.keys, @order.status) %>
      <%= f.submit "更新", class: "btn btn-success" %>
    <% end %>
  </div>
  
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @order.name %></td>
        <td><%= @order.order_item.price.to_s(:delimited) %></td>
        <td><%= @order.order_item.amount %></td>
        <td><%= @order.price.to_s(:delimited) %></td>
        <td>
          <%= form_with model: @order, url: admin_order_item_path(@order), method: :patch do |f| %>
            <%= f.fields_for :order_items do |oi| %>
              <%= oi.select :making_status, options_for_select(OrderItem.making_statuses.keys, oi.object.making_status) %>
            <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>

  <div>
    商品合計<%= @total_payment.to_s(:delimited) %>
  </div>
  <div>
    送料<%= @shipping_cost %>
  </div>
  <div>
    請求金額合計<%= (@total_payment + @shipping_cost).to_s(:delimited) %>
  </div>
  

</div>
