<div class="order-group container">
  <div class="col-2 title text-center pt-4">
    <h5 class="bg-light">注文履歴一覧</h5>
  </div>
  <table class="col-12 table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |oder| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.customer_id.name %></td>
          <td><%= order.order_item.amount %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>