<%= form_with model: item do |f| %>
  <table>
    <tbody>
      <tr>
        <td><%= f.label :"商品画像" %></td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <td><%= f.label :"商品名" %></td>
        <td><%= f.text_field :name, placeholder: "商品名" %></td>
      </tr>
      <tr>
        <td><%= f.label :"商品説明" %></td>
        <td><%= f.text_area :introduction, rows: '5', placeholder: "ここに説明文を記述します", class: "w-90" %></td>
      </tr>
      <tr>
        <td><%= f.label :"ジャンル" %></td>
        <td><%= f.collection_select :genre_id, genres, :id, :name, include_blank: "選択してください" %></td>
      </tr>
      <tr>
        <td><%= f.label :"税抜価格" %></td>
        <td><%= f.text_field :price, placeholder: 1000 %>円</td>
      </tr>
      <tr>
        <td><%= f.label :"販売ステータス" %></td>
        <td>
          <%= f.radio_button :is_active, :true, checked: true %>
          <%= f.label :is_active, "販売中", { value: :true, style: "display: inline-block;" } %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", { value: :false, style: "display: inline-block;" } %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit class: "btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
<% end %>