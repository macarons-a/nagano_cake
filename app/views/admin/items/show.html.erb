<div class="container">
  <div class="row mt-4">
    <div class="bg-light col-md-4">
      <h4 class="text-center">商品詳細</h4>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-4 mx-auto">
      <%= image_tag @item.get_image, size: "200x130" %>
    </div>
    <div class="col-md-8">
      <table class="col-md-7 col-sm-5 mx-auto">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込み価格<br>(税抜価格)</th>
          <td><%= @item.with_tax_price %><%= "(#{@item.price})" %>円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <span class="text-success">販売中</span>
            <% else %>
              <span class="text-secondary">販売停止中</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="text-center mt-3">
    <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
  </div>
</div>