<div class="container">
  <div class="row">
    <div class="col-10">
      <h4>商品詳細</h4>
      <%= image_tag @item.get_image, size: "100x100" %>
      <table>
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
            <td>税込み価格<br>(税抜価格)</td>
            <td><%= @item.with_tax_price\(@item.price) %></td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if item.is_active == true %>
                <td class="text-success">販売中</td>
              <% else %>
                <td class="text-secondary">販売停止中</td>
              <% end %>
          </tr>
        </tbody>
      </table>

      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
    </div>
  </div>
</div>