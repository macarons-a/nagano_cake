<div class="container">
  <div class="row mt-4">
    <div class="col-md-3 col-sm-3">
      <h3 class="text-center">商品一覧</h3>
    </div>
    <div class="col-md-7 col-sm-7"></div>
    <div class="col-md-2 col-sm-6 text-center">
      <%= link_to new_admin_item_path, class: "btn btn--circle" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
  <table class="table table-borderless border-bottom border-top mt-4 bg-light">
    <thead class="thead-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_active == true %>
            <td class="text-success">販売中</td>
          <% else %>
            <td class="text-secondary">販売停止中</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>