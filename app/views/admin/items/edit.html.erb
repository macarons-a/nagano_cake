<div class="container">
  <div class="mt-4">
    <div class="text-center">
      <h4 class="col-md-4 bg-light">商品編集</h4>
    </div>
  </div>
  <div class="table-responsive">
    <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
      <table class="col-10 mt-5 mx-auto">
        <tr>
          <th><%= f.label :"商品画像" %></th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th><%= f.label :"商品名" %></th>
          <td><%= f.text_field :name, placeholder: "商品名", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"商品説明" %></th>
          <td><%= f.text_area :introduction, rows: '5', placeholder: "ここに説明文を記述します", class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"ジャンル" %></th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %></td>
        </tr>
        <tr>
          <th><%= f.label :"税抜価格" %></th>
          <td><%= f.text_field :price, placeholder: 1000, class: "form-control col-12" %></td><td>円</td>
        </tr>
        <tr>
          <th><%= f.label :"販売ステータス" %></th>
          <td>
            <%= f.radio_button :is_active, :true, checked: true %>
            <%= f.label :is_active, "販売中", { value: :true } %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "販売停止中", { value: :false } %>
          </td>
        </tr>
      </table>
      <div class="text-center">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>