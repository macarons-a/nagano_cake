<div class="gener-group ml-5">
  <div class="title pt-4 col-2 text-center">
    <h5 class="bg-light">ジャンル一覧・追加</h5>
  </div>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row mt-5">
      <div class="form-group col-1">
        <%= f.label :name, 'ジャンル名' %>
      </div>
      <div class="form-group col-3">
        <%= f.text_field :name %>
      </div>
      <div class="form-group col-2">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  <table class="table mt-5 col-3">
    <thead>
      <tr class="text-center bg-light">
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td class="text-right pr-5"><%= link_to "編集する", edit_admin_genre_path(genre), class: 'btn btn-sm btn-success' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>